<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/tv_welcome"
        style="@style/BentalaHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/tv_ourFeatured"
        style="@style/FeaturedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="@string/featured"
        android:textColor="@color/black2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
        app:layout_constraintVertical_bias="0.011" />

    <Button
        android:id="@+id/tv_button1"
        style="@style/BentalaMenu"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/custom_button2"
        android:drawableTop="@drawable/soil_icon"
        android:layout_marginTop="20dp"
        android:text="Cek Jenis Tanah"
        android:textColor="@color/black2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ourFeatured"
        app:layout_constraintVertical_bias="0.471"/>

    <Button
        android:id="@+id/tv_button2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button2"
        android:text="Coming Soon"
        android:textSize="10sp"
        android:textColor="@color/black2"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toEndOf="@+id/tv_button1"
        app:layout_constraintTop_toBottomOf="@+id/tv_ourFeatured" />

    <Button
        android:id="@+id/tv_button3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button2"
        android:text="Coming Soon"
        android:textSize="10sp"
        android:textColor="@color/black2"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toEndOf="@+id/tv_button2"
        app:layout_constraintTop_toBottomOf="@+id/tv_ourFeatured" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>